<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_cardview_bg"
            android:paddingBottom="@dimen/_25sdp">

            <ImageView
                android:id="@+id/ivGiftBoxStrip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_93sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:contentDescription="@string/image"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivGiftBox"
                android:layout_width="@dimen/_211sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:contentDescription="@string/image"
                android:src="@drawable/watchnow_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvReadyTo"
                style="@style/TextStyle15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_36sdp"
                android:gravity="center"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/ready_to_illuminate_your_world"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivGiftBox" />

            <TextView
                android:id="@+id/tvWatchAndAd"
                style="@style/TextStyle8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:gravity="center"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/watch_an_ad_to_unlock_the_mode"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvReadyTo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnWatchVideoNow"
                android:layout_width="@dimen/_245sdp"
                android:layout_height="@dimen/_54sdp"
                android:layout_marginTop="@dimen/_minus1sdp"
                android:background="@drawable/watchnowbtn_bg"
                android:paddingStart="@dimen/_12sdp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAd">

                <TextView
                    android:id="@+id/tvWatchNow"
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/watch_now"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivWatchVideo"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivWatchVideo"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/ad_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvAd"
                style="@style/TextStyle16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:gravity="end"
                android:includeFontPadding="false"
                android:text="@string/ad"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/btnWatchVideoNow"
                app:layout_constraintEnd_toEndOf="@+id/btnWatchVideoNow"
                app:layout_constraintTop_toBottomOf="@+id/tvWatchAndAd" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cancel_button" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>