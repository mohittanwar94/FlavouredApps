<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_dialog_background"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_25sdp">

            <ImageView
                android:id="@+id/ivGiftBoxStrip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_93sdp"
                android:layout_marginTop="@dimen/_31sdp"
                android:src="@drawable/dialog_watch_video_strip"
                android:contentDescription="@string/image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_93sdp"
                android:layout_marginTop="@dimen/_31sdp"
                android:visibility="gone"
                android:src="@drawable/dialog_watch_video_strip"
                android:contentDescription="@string/image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivGiftBox"
                android:layout_width="@dimen/_93sdp"
                android:layout_height="@dimen/_93sdp"
                android:layout_marginTop="@dimen/_21sdp"
                android:src="@drawable/giftbox"
                android:contentDescription="@string/image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvWatchAndAd"
                style="@style/TextStyle13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:gravity="center"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/watch_an_ad_to_unlock_hilarious_prank_sound"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivGiftBox" />

            <TextView
                android:id="@+id/tvAd"
                style="@style/TextStyle14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_minus4sdp"
                android:gravity="end"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.0"
                android:text="@string/ad"
                app:layout_constraintBottom_toTopOf="@+id/btnWatchVideoNow"
                app:layout_constraintEnd_toEndOf="@+id/btnWatchVideoNow"
                app:layout_constraintTop_toBottomOf="@+id/tvWatchAndAd" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnWatchVideoNow"
                android:layout_width="@dimen/_137sdp"
                android:layout_height="@dimen/_34sdp"
                android:background="@drawable/get_started_btn"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingEnd="@dimen/_24sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_minus3sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAd">

                <ImageView
                    android:id="@+id/ivWatchVideo"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_1sdp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/ad_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvWatchNow"
                    style="@style/TextStyle15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/watch_now"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivWatchVideo"
                    app:layout_constraintTop_toTopOf="@+id/btnWatchVideoNow" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

